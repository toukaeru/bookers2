<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-aut-0">
      <h1>User info</h1>
      <% if @user.errors.any? %>
         <%= @user.errors.count %>error prohibited this obj from being saved:
       <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      <% end %>
       </ul>
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
       <div class = "form-group">
         <h4>Name</h4>
         <%= f.text_field :name, class: "form-control" %>
       </div>

        <div class = "form-group">
         <h4>Image</h4>
         <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
       </div>

       <div class = "form-group">
        <h4>introduction</h4>
         <%= f.text_area :introduction, class: "form-control" %>
       </div>

          <%= f.submit 'Update User', class: "btn btn-secondary" %>
       <% end %>
    </div>
  </div>
</div>